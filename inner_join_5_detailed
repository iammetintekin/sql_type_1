--ÖDEME TÜRÜNE GÖRE DAĞILIM
SELECT 
DATEPART(YEAR,P.DATE_) AS YEAR_,
DATEPART(MONTH,P.DATE_) AS MONTH_,
CASE
	WHEN PAYMENTTYPE=1 THEN 'KREDİ_KARTI'
	WHEN PAYMENTTYPE=2 THEN 'HAVALE'
END AS ODEME_TURU_ACIKLAMA,
SUM(P.PAYMENTTOTAL) AS TOPLAM_TUTAR
FROM  PAYMENTS P
GROUP BY DATEPART(MONTH,P.DATE_),P.PAYMENTTYPE, DATEPART(YEAR,P.DATE_) 
order by DATEPART(MONTH,P.DATE_),DATEPART(YEAR,P.DATE_) 
